<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.MainPage">

    <StackLayout>
        <Entry x:Name="cityEntry" Placeholder="Enter City" Margin="10, 100, 10, 20" FontSize="30"/>
        <Button Text="Get Weather" Clicked="OnGetWeatherClicked" FontSize="20"/>
        <Label x:Name="temperatureLabel" Text="Temperature: " Margin="0,170,0,0" FontSize="20"/>
        <Label x:Name="pressureLabel" Text="Pressure: " Margin="0,20,0,0" FontSize="20"/>
        <Label x:Name="humidityLabel" Text="Humidity: " Margin="0,20,0,0" FontSize="20"/>
        <Label x:Name="descriptionLabel" Text="Description: " Margin="0, 20, 0, 0" FontSize="20"/>
        <Label x:Name="windSpeedLabel" Text="Wind Speed: " Margin="0,20,0,0" FontSize="20"/>
        <!-- Add more labels for additional weather details as needed -->
    </StackLayout>

</ContentPage>
